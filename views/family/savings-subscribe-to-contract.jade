include /family/mixins/savings-policy-form-subscriber
include /family/mixins/savings-policy-form-insured-full
include /family/mixins/savings-policy-form-ben
include /family/mixins/savings-policy-form-payment
include /family/mixins/savings-policy-form-settlements
#savings-subscribe-to-contract
  .page-header: h3 Souscription d'une assurance vie
  .col-sm-10.process-form
    include /family/partials/savings-error
    accordion(close-others='true')
      accordion-group(heading='{{computed.subscriber}}')
        +savings_policy_form_subscriber('contract')
      accordion-group(heading='{{computed.insured}}')
        +savings_policy_form_insured_full('contract')
      accordion-group(heading='{{computed.lifeBen}}')
        +savings_policy_form_ben('contract', 'life')
      accordion-group(heading='{{computed.deathBen}}')
        +savings_policy_form_ben('contract', 'death')
      accordion-group(heading='{{computed.payment}}')
        +savings_policy_form_payment('contract')
    h3 Règlement première quittance
    .panel.panel-default
      .panel-body
        +savings_policy_form_settlements('contract')
  .col-sm-2.process-act
    include /family/partials/savings-act-subscribe-to-contract
