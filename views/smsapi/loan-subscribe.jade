include /smsapi/mixins/loan-policy-view-mvts
#loan-subscribe
  .page-header: h3 Simulation d'une assurance Tamouil
  .col-sm-10.process-form
    include /smsapi/partials/savings-error
    accordion(close-others='true')
      accordion-group(heading='{{computed.insured}}')
        include /smsapi/partials/loan-policy-form-insured
      accordion-group(heading='{{computed.def}}')
        include /smsapi/partials/loan-policy-form-def
      accordion-group(heading='{{computed.adjustement}}')
        include /smsapi/partials/loan-policy-form-adjustement
    .panel.panel-default
      .panel-heading
        h4.panel-title Contribution
      .panel-body
        +loan_policy_view_mvts('draft')
  .col-sm-2.process-act
    include /smsapi/partials/savings-act-subscribe
