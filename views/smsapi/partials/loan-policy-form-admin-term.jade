form(role='form', novalidate)
  .row
    .col-sm-2.form-group
      label.control-label TV (Table Vie)
        .checkbox
          label
            input(type='checkbox',
              ng-model='policy.admin.useTV')
            | Appliquer
    .col-sm-3.form-group
      label.control-label Taux d'actualisation
      input.form-control(type='number',
        min=0,
        max=1,
        ng-model='policy.admin.termActRate')
    .col-sm-3.form-group
      label.control-label Taux de chargement
      input.form-control(type='number',
        min=0,
        max=1,
        ng-model='policy.admin.termFeesRate')
    .col-sm-3.form-group
      label.control-label Age maximum de l'assuré
      input.form-control(type='number',
        min=0,
        ng-model='policy.admin.maxAge')
  .row
    .col-sm-3.form-group
      label.control-label Abattement: taux minimal
      input.form-control(type='number',
        min=-1,
        max=1,
        ng-model='policy.admin.termSurvAdjustMin')
    .col-sm-3.form-group
      label.control-label Abattement: taux maximal
      input.form-control(type='number',
        min=-1,
        max=1,
        ng-model='policy.admin.termSurvAdjustMax')
    .col-sm-4.form-group
      label.control-label Abattement s/ table de mortalité
      input.form-control(type='number',
        min=-1,
        max=1,
        ng-model='policy.admin.termSurvAdjust')
