mixin savings_policy_form_insured_full(obj)
  form(role='form',
    ng-controller='SavingsPolicyInsuredFullCtrl',
    ng-init='init("' + obj + '")',
    novalidate)
    .row
      .col-sm-4.form-group
        label.control-label
        .checkbox
          label
            input(type='checkbox',
              ng-model='isSubscriber')
            | Le souscripteur est lui même l'assuré
      .col-sm-4.form-group
        label.control-label Titre
        select.form-control(ng-model='insured.gender',
          ng-options='v.code as v.label for v in enums.actor.genders',
          disabled)
      .col-sm-4.form-group
        label.control-label Date de naissance
        input.form-control(type='date',
          ng-model='insured.birthDate'
          disabled)
    fieldset.row(ng-disabled='isSubscriber')
      .col-sm-4.form-group
        label.control-label C.I.N
        input.form-control(type='text',
        ng-model='insured.id')
      .col-sm-4.form-group
        label.control-label Prénom
        input.form-control(type='text',
        ng-model='insured.firstName')
      .col-sm-4.form-group
        label.control-label Nom
        input.form-control(type='text',
        ng-model='insured.name')
    fieldset.row(ng-disabled='isSubscriber')
      .col-sm-4.form-group
        label.control-label Email
        input.form-control(type='text',
        ng-model='insured.email')
      .col-sm-4.form-group
        label.control-label Tél
        input.form-control(type='text',
        ng-model='insured.mobile')
      .col-sm-4.form-group
        label.control-label Profession
        input.form-control(type='string',
          ng-model='insured.job'
          disabled)